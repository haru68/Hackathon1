@Master['master']
@Section['Content']
    <div class="container">
            @Each
            <div class="card">
                <img src=@Current.Photo alt="Elderly photo" style="width:100%">
                <h1>@Current.Name</h1>
                <p class="price">$ @Current.Price</p>
                <p>@Current.Description</p>
                <p><button>Add to Cart</button></p>
            </div>
            @EndEach
        </div>
  @EndSection